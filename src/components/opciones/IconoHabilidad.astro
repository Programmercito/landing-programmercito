---
interface Props {
    text: string;
    title?: string;
}
const { text, title } = Astro.props;
---

<div
    title={title}
    class="bg-bg-200 shadow-2xl shadow-black/60 mr-1 text-white font-bold py-2 px-2 rounded-xl transition-all duration-300 select-none hover:bg-bg-100 hover:scale-110 hover:shadow-[0_8px_32px_0_rgba(0,0,0,0.75)]"
>
    <slot />
</div>
