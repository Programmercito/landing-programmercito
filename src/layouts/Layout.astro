---
import Header from "../components/Header.astro";
import Footer from "../components/footer/Footer.astro";
import Body from "../components/Body.astro";
import "@fontsource-variable/onest";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description" content="Explora el portafolio de Joaquín, un desarrollador apasionado. Descubre proyectos innovadores en backend, bots, IA, y más. Conoce mi experiencia profesional y explora mi código en GitHub."
		/>
		<link rel="icon" type="image/svg+xml" href="/images/logo.png" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		<meta name="author" content="Joaquín H." />
		<title>{title}</title>

		<!-- ✅ Open Graph para LinkedIn y Facebook -->
		<meta
			property="og:title"
			content="Portafolio de Joaquín – Proyectos en backend, bots, IA y más"
		/>
		<meta property="og:description" content="Explora el portafolio de Joaquín, un desarrollador apasionado. Descubre proyectos innovadores en backend, bots, IA, y más. Conoce mi experiencia profesional y explora mi código en GitHub." />
		<meta name="image" property="og:image" content="https://portafolio.devcito.org/preview.png" />
		<meta property="og:url" content="https://portafolio.devcito.org" />
		<meta property="og:type" content="website" />

		<!-- ✅ Twitter Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta
			name="twitter:title"
			content="Portafolio de Joaquín – Proyectos en backend, bots, IA y más"
		/>
		<meta name="twitter:description" content="Explora el portafolio de Joaquín, un desarrollador apasionado. Descubre proyectos innovadores en backend, bots, IA, y más. Conoce mi experiencia profesional y explora mi código en GitHub." />
		<meta name="twitter:image" content="https://portafolio.devcito.org/preview.png" />
		<meta name="twitter:url" content="https://portafolio.devcito.org" />
	</head>
	<Header />
	<Body>
		<slot />
	</Body>
	<Footer />
	<style is:global>
		html {
			font-family: "Onest Variable", system-ui, sans-serif;
			scroll-behavior: smooth;
		}
	</style>


</html>
